{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": [
    "tsup.config.ts",
    "package.json",
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
